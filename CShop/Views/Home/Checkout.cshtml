@using CShop.Core.Models

@model CShop.Models.CheckoutModelInfo

@{
    ViewData["Title"] = "Checkout";
}

@if (Model.displayCheckout == null)
{
<h2>@ViewData["Title"]</h2>
<ul class="list-group">
@foreach (var Animal in Model.AnimalList)
    {
      <li class="list-group-item">Amount: @Animal.amount <br> Product: @Animal.name</li>
    }
    </ul>
@using (Html.BeginForm("Checkout","Home"))
{

  <div class="form-group">
    @Html.LabelFor(m => m.displayCheckout.Email)
    @Html.TextBoxFor(m => m.displayCheckout.Email, new {@class = "form-control"})
  </div>

  <div class="form-group">
    @Html.LabelFor(m => m.displayCheckout.Address)
    @Html.TextBoxFor(m => m.displayCheckout.Address, new {@class = "form-control"})
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  }
} else {
<h2>Thank you for your order</h2>
}
