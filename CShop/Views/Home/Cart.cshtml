@using CShop.Core.Models

@model List<AnimalModel>

@{
    ViewData["Title"] = "Cart";
    decimal totalPrice = 0;
}

<h2>@ViewData["Title"]</h2>


  <div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var Animal in Model)
                        {
                    totalPrice += @Animal.amount * @Animal.price;
                    <tr>
                        <td class="col-sm-8 col-md-6">
                        <div class="media">
                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="@Animal.img" style="width: 72px; height: 72px;"> </a>
                            <div class="media-body">
                                <h4 class="media-heading"><a href="#">@Animal.name</a></h4>
                            </div>
                        </div></td>
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                        <input type="number" class="form-control" value="@Animal.amount">
                        </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>$@Animal.price</strong></td>
                    </tr>
                        }
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td><h3>Total</h3></td>
                        <td class="text-right"><h3><strong>$@totalPrice</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>

                        <a href="/Home/EmptyCart"><button type="button" class="btn btn-default empty-cart">
                            <span class="glyphicon glyphicon-remove"></span> Empty Cart
                        </button></a></td>
                        <td>
                        <a href="/Home/Checkout"><button type="button" class="btn btn-success">
                            Checkout <span class="glyphicon glyphicon-play"></span>
                        </button></a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
